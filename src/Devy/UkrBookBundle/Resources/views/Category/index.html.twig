{% set active = 'categories' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block title %}
  Categories
{% endblock %}

{% block body -%}
  <table class="records_list table table-striped">
    <caption>
      <h3>Top level categories</h3>
    </caption>
    <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Is_active</th>
      <th>Created_at</th>
      <th>Updated_at</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
      <tr>
        <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.title }}</td>
        <td>{{ entity.description }}</td>
        <td>{{ entity.isActive }}</td>
        <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>
          <div class="btn-group">
            <a class="btn btn-sm btn-default" href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
            <a class="btn btn-sm btn-default" href="{{ path('category_edit', { 'id': entity.id }) }}">
              <i class="glyphicon glyphicon-pencil"></i>
            </a>
          </div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  <a class="btn btn-primary pull-right" href="{{ path('category_new') }}">
    <i class="glyphicon glyphicon-plus"></i>
    Create new category
  </a>
{% endblock %}
