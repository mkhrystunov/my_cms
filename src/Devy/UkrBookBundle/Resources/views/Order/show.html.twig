{% set active = 'orders' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block body -%}
  <h1>Order</h1>

  <table class="record_properties table">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ entity.name }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ entity.email }}</td>
    </tr>
    <tr>
      <th>Phone</th>
      <td>{{ entity.phone }}</td>
    </tr>
    <tr>
      <th>Shipping address city</th>
      <td>{{ entity.shippingAddressCity }}</td>
    </tr>
    <tr>
      <th>Shipping address details</th>
      <td>{{ entity.shippingAddressDetails }}</td>
    <tr>
      <th>Created_at</th>
      <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
    </tr>
    </tr>
    <tr>
      <th>Updated_at</th>
      <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
      <th>Total</th>
      <td>{{ entity.total }}</td>
    </tr>
    <tr>
      <th>Products</th>
      <td>
        <table class="table table-bordered">
          <tbody>
          {% for order_product in entity.orderProduct %}
            <tr>
              <td>{{ order_product.product }}</td>
              <td>{{ order_product.amount }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>

  <div class="btn-group pull-right btn-group-lg">
    <a class="btn btn-default" href="{{ path('orders') }}">
      <i class="glyphicon glyphicon-arrow-left"></i>
      Back
    </a>
    <a class="btn btn-info" href="{{ path('order_edit', { 'orderId': entity.id }) }}">
      <i class="glyphicon glyphicon-pencil"></i>
      Edit
    </a>
  </div>
{% endblock %}
