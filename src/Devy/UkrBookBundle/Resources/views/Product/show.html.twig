{% set active = 'catalog' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block body -%}
  <style>
    img {
      max-height: 150px;
      max-width: 150px;
    }
  </style>
  <h1>Product</h1>

  <table class="record_properties table">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Title</th>
      <td>{{ entity.title }}</td>
    </tr>
    <tr>
      <th>Image</th>
      <td>
        {% if entity.image and entity.image.webPath %}
          <img src="{{ asset(entity.image.webPath) }}">
        {% endif %}
      </td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ entity.description }}</td>
    </tr>
    <tr>
      <th>Description_full</th>
      <td>{{ entity.descriptionfull }}</td>
    </tr>
    <tr>
      <th>Is_active</th>
      <td>{{ entity.isactive }}</td>
    </tr>
    <tr>
      <th>Created_at</th>
      <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
      <th>Updated_at</th>
      <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
      <th>Price</th>
      <td>{{ entity.price }}</td>
    </tr>
    <tr>
      <th>ProductAttributes</th>
      <td>
        <table class="table table-bordered">
          <tbody>
          {% for product_attribute in entity.productAttributes %}
            <tr>
              <td>{{ product_attribute.attribute }}</td>
              <td>{{ product_attribute.value }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>

  <div class="btn-group pull-right">
    <a class="btn btn-default btn-lg" href="{{ path('category_show', { 'id': entity.category.id }) }}">
      <i class="glyphicon glyphicon-arrow-left"></i>
      Back
    </a>
    <a class="btn btn-info btn-lg" href="{{ path('product_edit', { 'id': entity.id }) }}">
      <i class="glyphicon glyphicon-pencil"></i>
      Edit
    </a>
  </div>
{% endblock %}
