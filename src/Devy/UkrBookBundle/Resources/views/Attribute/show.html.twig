{% set active = 'attributes' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block title %}
  {{ entity.name }}
{% endblock %}

{% block body -%}
  <h1>{{ entity.name }}</h1>

  <table class="record_properties">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ entity.name }}</td>
    </tr>
    <tr>
      <th>Code</th>
      <td>{{ entity.code }}</td>
    </tr>
    <tr>
      <th>Mode</th>
      <td>{{ entity.mode }}</td>
    </tr>
    <tr>
      <th>Defaults</th>
      <td>{{ entity.defaults }}</td>
    </tr>
    <tr>
      <th>Is_active</th>
      <td>{{ entity.isactive }}</td>
    </tr>
    </tbody>
  </table>

  <ul class="record_actions">
    <li>
      <a class="btn btn-default" href="{{ path('attribute') }}">
        Back to the list
      </a>
    </li>
    <li>
      <a class="btn btn-default" href="{{ path('attribute_edit', { 'id': entity.id }) }}">
        Edit
      </a>
    </li>
    <li>{{ form(delete_form) }}</li>
  </ul>
{% endblock %}
