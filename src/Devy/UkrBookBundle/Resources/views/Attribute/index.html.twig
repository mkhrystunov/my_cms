{% set active = 'attributes' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block title %}
  Attributes
{% endblock %}

{% block body -%}
  <table class="records_list table">
    <caption><h3>Attributes</h3></caption>
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Code</th>
      <th>Mode</th>
      <th>Defaults</th>
      <th>Is_active</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
      <tr>
        <td><a href="{{ path('attribute_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.name }}</td>
        <td>{{ entity.code }}</td>
        <td>{{ entity.mode }}</td>
        <td>{{ entity.defaults }}</td>
        <td>{{ entity.isactive }}</td>
        <td>
          <div class="btn-group">
            <a class="btn btn-default" href="{{ path('attribute_show', { 'id': entity.id }) }}">show</a>
            <a class="btn btn-default" href="{{ path('attribute_edit', { 'id': entity.id }) }}">edit</a>
          </div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <ul>
    <li>
      <a class="btn btn-success" href="{{ path('attribute_new') }}">
        Create a new entry
      </a>
    </li>
  </ul>
{% endblock %}
