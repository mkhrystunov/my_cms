{% set active = 'posts' %}
{% extends 'DevyUkrBookBundle::administrator.layout.html.twig' %}

{% block title %}
  {{ entity.title }}
{% endblock %}

{% block body -%}
  <h1>Post edit</h1>

  {{ form_start(form) }}
  {{ form_widget(form) }}
  <input type="submit" value="Update" class="btn btn-success btn-lg pull-right">
  {{ form_end(form) }}
  <a class="btn btn-info btn-lg pull-right" href="{{ url('post') }}">Back</a>

  {{ form_start(delete_form) }}
  <input type="submit" value="Delete" class="btn btn-danger btn-lg pull-right">
  {{ form_end(delete_form) }}
{% endblock %}
